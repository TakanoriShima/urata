<% if @user_profile.public_status_region == 1 %>
 <% if @user_profile.profile_type1 %>
  <%= render "layouts/user_profile_region", user_profile: @user_profile, profile_type1_flag: @profile_type1_flag, mypage_flag: @mypage_flag %>
 <% end %>
<% end %>
<% if @user_profile.public_status_business == 1 %>
 <% if @user_profile.profile_type2 %>
  <%= render "layouts/user_profile_business", user_profile: @user_profile, profile_type2_flag: @profile_type2_flag, avatar_flag: @avatar_flag, mypage_flag: @mypage_flag %>
 <% end %>
<% end %> 
<% @posts.each do |post| %>
 <div class="container">
  <div class="card mb-3" style="max-width: 800px;">
   <div class="row g-0">
     <% if post.public_status_id == 1 %>
      <%= render "layouts/post_card", post: post %>
     <% end %>
   </div>
  </div>
 </div> 
<% end %>