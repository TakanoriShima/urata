<div class="container">
 <div class="row">
  <div class="col-md-8 offset-md-2">
    <% type_flag %>
    <%#= bootstrap_form_with(model: @post, local: true, url: posts_business_path, method: "post") do |f| %>
    <%#= bootstrap_form_for(@post, url: {controller: 'posts_business', action: 'create' }, label_errors: true, html: { novalidate: true }) do |f| %>
    <%= bootstrap_form_with(model: @post, url: posts_business_index_path, local: true, label_errors: true, html: { novalidate: true }) do |f| %>
      <div class="post-form">
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :post_type, value: 2 %>
        <%= f.text_field :title, label:"タイトル" %>
        <%= f.select :prefecture, {'北海道': '北海道', '青森県': '青森県', '岩手県': '岩手県', '宮城県': '宮城県', '秋田県': '秋田県', '山形県': '山形県', '福島県': '福島県', '茨城県': '茨城県', '栃木県': '栃木県', '群馬県': '群馬県', '埼玉県': '埼玉県', '千葉県': '千葉県', '東京都': '東京都', '神奈川県': '神奈川県', '新潟県': '新潟県', '富山県': '富山県', '石川県': '石川県', '福井県': '福井県', '山梨県': '山梨県', '長野県': '長野県', '岐阜県': '岐阜県', '静岡県': '静岡県', '愛知県': '愛知県', '三重県': '三重県', '滋賀県': '滋賀県', '京都府': '京都府', '大阪府': '大阪府', '兵庫県': '兵庫県', '奈良県': '奈良県', '和歌山県': '和歌山県', '鳥取県': '鳥取県', '島根県': '島根県', '岡山県': '岡山県', '広島県': '広島県', '山口県': '山口県', '徳島県': '徳島県', '香川県': '香川県', '愛媛県': '愛媛県', '高知県': '高知県', '福岡県': '福岡県', '佐賀県': '佐賀県', '長崎県': '長崎県', '熊本県': '熊本県', '大分県': '大分県', '宮崎県': '宮崎県', '鹿児島県': '鹿児島県', '沖縄県': '沖縄県'}, { include_blank: '選択してください', label: '都道府県'}, { class: 'form-control'  }  %>
        <%= f.text_field :city, label:"市町村以下" %>
        <%= f.text_area :body2, label:"やりたいことなど", size: "40x15", placeholder:"", required: true %>
        <div class="category">
         <% @category_wants.each do |category_want| %>
          <nobr><input class="form-check-input" type="checkbox" name="category_want_id[]" value="<%= category_want.id %>" >
          <%= category_want.tag_name %></nobr>&emsp;
         <% end %>
        </div>
        <%= f.file_field :images, multiple: true, label:"画像" %>
        <%= f.text_field :earnest, label:"本気度" %>
        <div class="category">
          <% @category_earnests.each do |category_earnest| %>
           <nobr><input class="form-check-input" type="checkbox" name="category_earnest_id[]" value="<%= category_earnest.id %>" >
           <%= category_earnest.tag_name %></nobr>&emsp;
          <% end %> 
        </div>
        <div class="public_status">
          <%= f.radio_button :public_status_id, 1, label:"公開", inline: true %>
          <%= f.radio_button :public_status_id, 2, label:"非公開", inline: true %>
        </div>
      </div>
      <div class="submit"><%= f.submit %></div>
     <% end %>
   </div>
   <%= render "layouts/user_profile", user_profile: @user_profile, profile_type1_flag: @profile_type1_flag, profile_type2_flag: @profile_type2_flag %>
  </div>
</div>