<li <%= "class = my-content" if message.from_id == current_user.id %>>
    <% user = User.find(message.from_id) %>
    <%# user_profile = UserProfile.find(message.from_id) %>
    <% if message.from_id != current_user.id %>
     <%= link_to user_profile_path(user.user_profile.id) do %>
       <%= image_tag user.user_profile.avatar.variant(:thumb_s), class: "message-avatar" if user.user_profile.avatar.attached? %><br>
       <p class="screen_name"><%= user.user_profile.screen_name %></p>
     <% end %> 
    <% end %>&emsp;
    <div class="content">
        <span class="card" style="max-width: 50rem; text-align: left;">
          <div class="card-body"><%= text_url_to_link(safe_join((h(message.content)).split("\n"),tag(:br))).html_safe %></div>
        </span>

        <span class="timestamp">
            <%= l message.created_at %>
        </span>
        
        <% if message.from_id == current_user.id %>
            <%= link_to message, data: { turbo_method: :delete, turbo_confirm: "削除しますか？" } do %>
             <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
              <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
             </svg>
            <% end %>
            <%#= link_to "削除", message_path(message.id), method: :delete, data: { confirm: "You sure?" } %>
        <% end %>
    </div>
    <% if message.from_id == current_user.id %>
     &emsp;<%= link_to user_profile_path(user.user_profile.id) do %>
       <%= image_tag user.user_profile.avatar.variant(:thumb_s), class: "message-avatar" if user.user_profile.avatar.attached? %><br>
       <p class="screen_name"><%= user.user_profile.screen_name %></p>
     <% end %>
    <% end %>
</li>