<div class="container">
  <div class="row">
    <div class="mb-3" style="max-width: 800px;">
      <div class="category">
        <%= link_to "地域側投稿", posts_region_path, class: "btn btn-success" %>
        <%= link_to "起業希望者", posts_business_path, class: "btn btn-danger" %>
      </div>
      <form action="/posts">
        <%= render "layouts/posts/keyword_prefecture", keyword: @keyword, prefecture: @prefecture %>
        <div>
          <input class="btn btn-secondary" type="submit" value="検索" style="margin-bottom: 20px;">
        </div>
      </form>
      
      <a class="btn btn-secondary" href="/posts" role="button" style="margin-bottom: 40px;">検索条件をクリア</a>
      
      <%= render "layouts/posts/post_list", posts_count: @posts_count, posts: @posts %> 　
    </div>
  </div>
</div>